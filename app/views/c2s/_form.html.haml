
= simple_form_for(@comment, :html => { class: 'form-inline comment-form', id: 'nc-form' }) do |f|
  = f.error_notification

  %h2 Add New Comment

  %fieldset

    %div.form-inputs
      %div.form-horizontal
        = f.input :thread_key, :as => :hidden, input_html: {:value => 'test'}
        = f.input :parent_id, :as => :hidden, input_html: {:value => 0,:id => 'nc_parent_id'}
        = f.input :author, input_html: {class: 'span6',id: 'nc_author', maxlength: 100, style: 'margin-left: 10px; width: 300px'}
        %br
        = f.input :body, as: :text, input_html: {rows: 4, style: 'margin-left: 10px; width: 300px'}

        %br

    %div{:class => 'form-actions'}
      = f.button :submit, :value => 'New Comment', :class => 'btn-primary'
